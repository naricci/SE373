{
	"env": {
		"browser": true,
		"es6": true,
		"jasmine": true,
		"jquery": true,
		"mongo": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			"warn",
			2
		],
		"linebreak-style": [
			"warn",
			"unix"
		],
		"quotes": [
			"warn",
			"single"
		],
		"semi": [
			"error",
			"never"
		],
		"no-console": "off",
		"no-mixed-spaces-and-tabs": "off",
		"no-undef": "error",
		"no-unused-vars": "warn"
	}
}
